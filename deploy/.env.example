# OpenDiscourse Configuration
DOMAIN=opendiscourse.net
EMAIL=admin@opendiscourse.net

# Database
POSTGRES_USER=opendiscourse
POSTGRES_PASSWORD=change-this-to-a-secure-password
POSTGRES_DB=opendiscourse

# Redis
REDIS_PASSWORD=change-this-to-a-secure-password

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=generate-a-secure-secret-here

# Traefik
TRAEFIK_USER=admin
TRAEFIK_PASSWORD=change-this-to-a-secure-password

# Monitoring
GRAFANA_ADMIN_PASSWORD=change-this-to-a-secure-password

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@opendiscourse.net

# Backups
BACKUP_RETENTION_DAYS=30

# Storage
UPLOAD_DIR=/var/lib/opendiscourse/uploads
MAX_UPLOAD_SIZE=100M

# Development
DEBUG=false
